<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:id="@+id/img_gep"
        android:src="@drawable/rock"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="A gép választása"
        android:layout_gravity="center"
        android:id="@+id/textView_gep"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:id="@+id/img_sajat"
        android:src="@drawable/rock"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:text="A te választásod"
        android:id="@+id/textView_sajat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="Eredmeny: Ember: 0 Computer: 0"
        android:id="@+id/textView_eredmeny"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="KŐ"
            android:id="@+id/btn_ko"
            android:layout_weight="1"
            android:background="@drawable/rock"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="PAPÍR"
            android:id="@+id/btn_papir"
            android:layout_weight="1"
            android:background="@drawable/paper"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="OLLÓ"
            android:id="@+id/btn_ollo"
            android:layout_weight="1"
            android:foregroundTint="@color/black"
            android:background="@drawable/scissors" />

    </LinearLayout>

</LinearLayout>